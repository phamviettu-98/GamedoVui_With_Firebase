<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f000"
    android:orientation="vertical"
    tools:context=".PlayActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:background="#F27C2002"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:background="@drawable/btn_back"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_marginLeft="15dp"
           android:layout_width="wrap_content"
           android:layout_weight="5"
           android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:background="@drawable/heart_click"
            android:layout_height="50dp"/>
           <TextView
               android:id="@+id/life"
               android:layout_width="80dp"
               android:textColor="#F10606"
               android:text="2"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="36sp"
               android:layout_height="wrap_content"/>
       </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_baseline_alarm_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/time"
                android:textColor="#F43636"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="36sp"
                android:text="3:00"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#f000"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/picture_border"
            android:layout_height="250dp">
         <TextView
             android:id="@+id/cauhoi"
             android:layout_marginTop="5dp"
             android:layout_marginRight="26dp"
             android:layout_marginLeft="26dp"
             android:layout_gravity="center"
             android:gravity="center"
             android:textSize="20sp"
             android:text=""
             android:textColor="#FFEB3B"
             android:layout_width="match_parent"
             android:layout_height="200dp"/>
            <Button
                android:id="@+id/btntiep"
                android:textColor="#F43636"
                android:layout_gravity="center"
                android:text="Câu Tiếp theo>>>"
                android:textSize="15sp"
                android:background="#f000"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Hiện tại:"
                    android:textColor="#f00000"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/diemht"
                    android:text="00"
                    android:textColor="#f00000"
                    android:textSize="18sp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
               android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Lớn nhất:"
                    android:textColor="#f00000"
                    android:textSize="18sp"
                    android:layout_width="130dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/diemmax"
                    android:text="00"
                    android:textColor="#f00000"
                    android:textSize="18sp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="350dp"
           android:layout_marginTop="10dp"
          android:weightSum="4"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="8"
               android:background="@drawable/suggest_item_border"
               android:layout_height="70dp">
               <TextView
                   android:padding="5dp"
                   android:text="A."
                   android:layout_weight="1"
                   android:textSize="20sp"
                   android:textColor="#F43636"
                   android:layout_width="5dp"
                   android:layout_height="70dp"/>
               <TextView
                    android:id="@+id/dapanA"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:text=""
                   android:layout_marginRight="6dp"
                   android:layout_weight="7"
                   android:textSize="20sp"
                   android:textColor="#F43636"
                   android:layout_width="wrap_content"
                   android:layout_height="70dp"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="8"
               android:background="@drawable/suggest_item_border"
               android:layout_height="70dp">
               <TextView
                   android:padding="5dp"
                   android:text="B."
                   android:layout_weight="1"
                   android:textSize="25sp"
                   android:textColor="#F43636"
                   android:layout_width="5dp"
                   android:layout_height="70dp"/>
               <TextView

                   android:id="@+id/dapanB"
                   android:layout_gravity="center"
                   android:text=""
                   android:gravity="center"
                   android:layout_marginRight="6dp"
                   android:layout_weight="7"
                   android:textSize="20sp"
                   android:textColor="#F43636"
                   android:layout_width="wrap_content"
                   android:layout_height="70dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="8"
               android:background="@drawable/suggest_item_border"
               android:layout_height="80dp">
               <TextView
                   android:padding="5dp"
                   android:text="C."
                   android:layout_weight="1"
                   android:textSize="25sp"
                   android:textColor="#F43636"
                   android:layout_width="5dp"
                   android:layout_height="70dp"/>
               <TextView
                   android:id="@+id/dapanC"
                   android:layout_gravity="center"
                   android:text=""
                   android:gravity="center"
                   android:layout_marginRight="6dp"
                   android:layout_weight="7"
                   android:textSize="20sp"
                   android:textColor="#F43636"
                   android:layout_width="wrap_content"
                   android:layout_height="70dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="8"
               android:background="@drawable/suggest_item_border"
               android:layout_height="80dp">
               <TextView
                   android:padding="5dp"
                   android:text="D."
                   android:layout_weight="1"
                   android:textSize="25sp"
                   android:textColor="#F43636"
                   android:layout_width="5dp"
                   android:layout_height="80dp"/>
               <TextView
                   android:id="@+id/dapanD"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:text=""
                   android:layout_marginRight="6dp"
                   android:layout_weight="7"
                   android:textSize="20sp"
                   android:textColor="#F43636"
                   android:layout_width="wrap_content"
                   android:layout_height="80dp"/>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>

</LinearLayout>